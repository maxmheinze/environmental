# Rename the levels
levels(s_1$political_leaning) <- c("extreme_left", "left", "center", "right", "extreme_right", "indeterminate")

formula <- as.formula(paste("large_bias ~  (tax_approval_nsp) + (tax_approval_yes) + as.factor(yv_pnr) + as.factor(yv_understands) + as.factor(yv_supports) + as.factor(yv_is_part) + as.factor(statut_emploi) + 
